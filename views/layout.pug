html
    head
        link(rel='stylesheet', href='/stylesheets/style.css')
        // Bootstrap CSS
        link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css', integrity='sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T', crossorigin='anonymous')
        // jQuery
        script(src='https://code.jquery.com/jquery-3.3.1.slim.min.js', integrity='sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo', crossorigin='anonymous')
        // Popper.JS
        script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js', integrity='sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1', crossorigin='anonymous')
        // Bootstrap JS
        script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js', integrity='sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM', crossorigin='anonymous')
        // Tempus Dominus time picker
        script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js')
        script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js')
        script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.1/js/tempusdominus-bootstrap-4.min.js')
        // <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.1/css/tempusdominus-bootstrap-4.min.css" />
        link(rel='stylesheet', href='/stylesheets/tempusdominus-bootstrap-4.min.css')
        // Bootstrap custom theme
        link(rel='stylesheet', href='/stylesheets/orders.css')
        // JavaScript
        script(src='/javascripts/index.js')
        title eatSpot

        mixin navbar
            nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
                a.navbar-brand(href='/' type='submit') eatSpot
                button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarTogglerDemo01', aria-controls='navbarTogglerDemo01', aria-expanded='false', aria-label='Toggle navigation')
                    span.navbar-toggler-icon
                #navbarTogglerDemo01.collapse.navbar-collapse
                    ul.navbar-nav.mr-auto.mt-2.mt-lg-0
                        li.nav-item.active
                            a.nav-link(href='login' type='submit') Login
                        li.nav-item.active
                            a.nav-link(href='/signup' type='submit') Sign up
                        li.nav-item.active
                            a.nav-link(href='/signup-restaurateur') New restaurateur?

        mixin search-field
            div
                .container
                    form(action='/results', method='get')
                        .row
                            .col-sm
                                .form-group
                                    #datetimepicker4.input-group.date(data-target-input='nearest')
                                        input.form-control.datetimepicker-input(type='text', data-target='#datetimepicker4')
                                        .input-group-append(data-target='#datetimepicker4', data-toggle='datetimepicker')
                                            .input-group-text
                                                i.fa.fa-calendar Date
                            .col-sm
                                .form-group
                                    #datetimepicker3.input-group.date(data-target-input='nearest')
                                        input.form-control.datetimepicker-input(type='text', data-target='#datetimepicker3')
                                        .input-group-append(data-target='#datetimepicker3', data-toggle='datetimepicker')
                                            .input-group-text
                                                i.fa.fa-clock-o Time
                            .col-sm
                                .form-group
                                    .input-group
                                        input#people.form-control(type='text', aria-label='Text input with dropdown button', value='2')
                                        .input-group-append
                                            button.btn.btn-secondary.dropdown-toggle(type='button', data-toggle='dropdown', aria-haspopup='true') People
                                            .dropdown-menu
                                                a.dropdown-item(href='#' id='one') 1
                                                a.dropdown-item(href='#' id='two') 2
                                                a.dropdown-item(href='#' id='three') 3
                                                a.dropdown-item(href='#' id='four') 4
                                                a.dropdown-item(href='#' id='five') 5
                                                a.dropdown-item(href='#' id='six') 6
                                                a.dropdown-item(href='#' id='seven') 7
                                                a.dropdown-item(href='#' id='eight') 8
                        .row
                            .col
                                .form-group
                                    .input-group
                                        input.form-control(type='text', placeholder='Sydney', aria-label='Location', aria-describedby='button-addon2')
                                        .input-group-append
                                            button#button-addon2.btn.btn-primary(type='submit') Let's go!

        mixin search-hero
            .hero
                #bottom.hero
                #top.hero
                #text
                +search-field
            //TODO: Redo this style statement as a class in scss
            div(style='width: 100vw; height: 320px;')

    body
        +navbar
        block content
